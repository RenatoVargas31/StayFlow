<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/adminInicioFragment">

    <!-- Menú inferior -->
    <fragment
        android:id="@+id/adminInicioFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.AdminInicioFragment"
        android:label="Inicio" />

    <fragment
        android:id="@+id/reportesAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.ReporteAdminFragment"
        android:label="Reportes" />

    <fragment
        android:id="@+id/huespedAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.HuespedAdminFragment"
        android:label="Huésped">
        <action
            android:id="@+id/action_huespedAdminFragment_to_reservasAdminFragment"
            app:destination="@id/reservasAdminFragment" />
        <action
            android:id="@+id/action_huespedAdminFragment_to_taxiAdminFragment"
            app:destination="@id/taxiAdminFragment" />
        <action
            android:id="@+id/action_huespedAdminFragment_to_checkoutAdminFragment"
            app:destination="@id/checkoutAdminFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.ChatAdminFragment"
        android:label="Mensajería" />

    <fragment
        android:id="@+id/perfilAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.PerfilAdminFragment"
        android:label="Perfil" />

    <!-- Navegación desde botones -->
    <fragment
        android:id="@+id/ubicacionAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.UbicacionAdminFragment"
        android:label="Ubicación" />

    <fragment
        android:id="@+id/galeriaAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.GaleriaAdminFragment"
        android:label="Galería" />

    <!-- Habitaciones -->
    <fragment
        android:id="@+id/habitacionesAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.HabitacionesAdminFragment"
        android:label="Habitaciones">
        <action
            android:id="@+id/action_habitacionesAdminFragment_to_registroHabitacionFragment"
            app:destination="@id/registroHabitacionFragment" />
    </fragment>

    <fragment
        android:id="@+id/registroHabitacionFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.RegistroHabitacionFragment"
        android:label="Registro de Habitación">
        <action
            android:id="@+id/action_registroHabitacionFragment_to_habitacionesAdminFragment"
            app:destination="@id/habitacionesAdminFragment" />
    </fragment>

    <!-- Servicios -->
    <fragment
        android:id="@+id/serviciosAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.ServiciosAdminFragment"
        android:label="Servicios">
        <action
            android:id="@+id/action_serviciosAdminFragment_to_registroServicioFragment"
            app:destination="@id/registroServicioFragment" />
    </fragment>

    <fragment
        android:id="@+id/registroServicioFragment"
        android:name="com.codebnb.stayflow.adminHotel.home.RegistroServicioFragment"
        android:label="Registro de Servicio">
        <action
            android:id="@+id/action_registroServicioFragment_to_serviciosAdminFragment"
            app:destination="@id/serviciosAdminFragment" />
    </fragment>

    <!-- Reservas y detalle -->
    <fragment
        android:id="@+id/reservasAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.huesped.ReservasAdminFragment"
        android:label="Reservas">
        <action
            android:id="@+id/action_reservasAdminFragment_to_detalleReservaFragment"
            app:destination="@id/detalleReservaFragment" />
    </fragment>

    <fragment
        android:id="@+id/detalleReservaFragment"
        android:name="com.codebnb.stayflow.adminHotel.huesped.DetalleReservaAdminFragment"
        android:label="Detalle de reserva" />

    <!-- Taxi y detalle -->
    <fragment
        android:id="@+id/taxiAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.huesped.TaxiAdminFragment"
        android:label="Taxi">
        <action
            android:id="@+id/action_taxiAdminFragment_to_detalleTaxiAdminFragment"
            app:destination="@id/detalleTaxiAdminFragment" />
    </fragment>

    <fragment
        android:id="@+id/detalleTaxiAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.huesped.DetalleTaxiAdminFragment"
        android:label="Detalle del taxi" />

    <!-- Checkout -->
    <fragment
        android:id="@+id/checkoutAdminFragment"
        android:name="com.codebnb.stayflow.adminHotel.huesped.CheckoutAdminFragment"
        android:label="Checkout" />
</navigation>
